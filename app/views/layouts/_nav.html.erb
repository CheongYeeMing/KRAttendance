<nav class="navbar navbar-expand-lg nav-outer">
  <a class="navbar-brand nav-brand" href="/home">
    <%= image_tag("KR_logo.png", class: "nav-logo") do%>
    <% end %>
  </a>
  <a class="navbar-brand nav-brand-word" href="/home">
    KRAttendance
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown nav-item-dropdown">
          <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false" style="margin-bottom: 10px;">
            <%= render_nav_image(current_user) %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown" >
            <a class="dropdown-item" href="#"><%= current_user.name %></a>
            <%= link_to "View Profile", profile_path ,class: 'nav-view-profile-link dropdown-item nav-dropdown-btn' %>
            <div class="dropdown-divider"></div>
            <% if current_user.admin?%>
              <a class="dropdown-item" href="#">Admin</a>
              <%= link_to "Manage CCAs", ccas_path ,class: 'nav-admin-link dropdown-item' %>
              <%= link_to "Manage Residents", residents_path ,class: 'nav-admin-link dropdown-item' %>
              <div class="dropdown-divider"></div>
            <% elsif current_user.role == "leader" %>
              <a class="dropdown-item" href="#">Leader</a>
              <div class="dropdown-divider"></div>
            <% end %>
            <button class="dropdown-item" href="#">
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default btn-sm" %>
            </button>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <a class="nav-link nav-login-link" href="/users/sign_in">Login</a>
        </li>
      <% end %>
    </ul>
  </div>
