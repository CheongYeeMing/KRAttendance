<%= form_with(model: @user, local: true) do |form| %>
  <div class="form-group text-left enable-validation-icons">
    <%= form.label :name%><br/>
    <%= form.text_field :name, autofocus: true, autocomplete: "content", class: "form-control"%>
  </div>

  <div class="form-group text-left">
    <%= form.label :avatar %><br />
    <%= form.file_field :avatar, autofocus: true, autocomplete: "content", class: "form-control" %>
  </div>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this stall from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Submit", :class =>'btn btn-primary'%>
  </div>
<% end %>
